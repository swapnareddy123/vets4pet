
<%= link_to "Sign out", sign_out_path %>

<h1>Listing vets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>School</th>
      <th>Experience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vets.each do |vet| %>
      <tr>
        <td><%= link_to vet.name, vet_path(vet) %></td>
        <td><%= vet.address %></td>
        <td><%= vet.city %></td>
        <td><%= vet.state %></td>
        <td><%= vet.zip %></td>
        <td><%= vet.school %></td>
        <td><%= vet.experience %></td>
        <td><%= link_to 'Show', vet %></td>
        <td><%= link_to 'Edit', edit_vet_path(vet) %></td>
        <td><%= link_to 'Destroy', vet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vet', new_vet_path %>
