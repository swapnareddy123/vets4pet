
<%= link_to "Sign out", sign_out_path %>

<h1>Listing appointments</h1>

<table>
  <thead>
    <tr>
      <th>Vet</th>
      <th>Customer</th>
      <th>Pet</th>
      <th>Visit on</th>
      <th>Remainder</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= link_to appointment.vet.name, vet_path(appointment.vet)%></td>
        <td><%= appointment.customer %></td>
        <td><%= appointment.pet %></td>
        <td><%= appointment.visit_on %></td>
        <td><%= appointment.reminder %></td>
        <td><%= appointment.reason %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
